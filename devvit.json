{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "chainstory130",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create Chain Story Post",
        "description": "Start a new collaborative storytelling game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "hourlyRoundResolution": {
        "cron": "0 * * * *",
        "endpoint": "/internal/scheduler/hourly-round"
      },
      "dailyMaintenance": {
        "cron": "0 0 * * *",
        "endpoint": "/internal/scheduler/daily-maintenance"
      }
    }
  },
  "dev": {
    "subreddit": "chainstory130_dev"
  }
}
